<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MatchListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/upcoming_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"/>
        <RelativeLayout
            android:id="@+id/more_match_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:clickable="true"
            android:background="@drawable/rectangle_4"
            android:layout_below="@id/upcoming_main_layout">

            <TextView
                android:id="@+id/more_match_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="All Upcoming Matches"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:textColor="@color/primeText"
                android:textSize="16dp"/>

            <View
                android:id="@+id/vector"
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:background="@drawable/upcoming_match_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>
        </RelativeLayout>

    </RelativeLayout>


</ScrollView>